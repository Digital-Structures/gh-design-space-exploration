<UserControl x:Class="Stepper.DataControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Stepper"
             mc:Ignorable="d">
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBox Name="VarName" Text="{Binding VariableName, StringFormat=n2}" FontSize="12" Foreground="Gray" TextDecorations="None"
                     Grid.Column="0" Width="Auto" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0"
                     Visibility="Visible" MaxWidth="60"
                     ></TextBox>

        <TextBlock Name="ValueText" Text="0.00" Grid.Column="1" FontSize="12" Foreground="DarkGray"
                     Width="Auto" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0"  
                     ></TextBlock>
    </Grid>
</UserControl>
