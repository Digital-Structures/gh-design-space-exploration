<UserControl
	x:Class="Stepper.DataControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:Stepper">
	<Grid
		Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="Auto" />
			<ColumnDefinition
				Width="Auto" />
		</Grid.ColumnDefinitions>
		<TextBox
			Name="VarName"
			FontSize="12"
			Foreground="#FF808080"
			TextDecorations="None"
			Grid.Column="0"
			Width="Auto"
			HorizontalAlignment="Left"
			VerticalAlignment="Center"
			Margin="10,0"
			Visibility="Visible"
			MaxWidth="60"
			Text="{Binding VariableName, StringFormat=n2}" />
		<TextBlock
			Name="ValueText"
			Text="0.00"
			Grid.Column="1"
			FontSize="12"
			Foreground="#FFA9A9A9"
			Width="Auto"
			HorizontalAlignment="Left"
			VerticalAlignment="Center"
			Margin="10,0" />
	</Grid>
</UserControl>
