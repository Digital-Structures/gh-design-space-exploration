<local:BaseControl
	x:Class="Stepper.VariableControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:Stepper">
    <Grid
		Margin="0,10"
		Style="{x:Null}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
				Width="*" />
            <ColumnDefinition
				Width="Auto" />
            <ColumnDefinition
				Width="Auto" />
            <ColumnDefinition
				Width="Auto" />
            <ColumnDefinition
				Width="Auto" />
            <ColumnDefinition
				Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBox
			Name="VarName"
			FontFamily="Roboto"
			FontSize="12"
			Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
			Grid.Column="0"
			Width="Auto"
			HorizontalAlignment="Left"
			VerticalAlignment="Center"
			Margin="25,0,0,0"
			Visibility="Visible"
			Text="{Binding Name, Mode=TwoWay}"
			PreviewKeyDown="TextBox_PreviewKeyDown" />
        <TextBox
			Name="ValueText"
			FontSize="12"
			Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
			Grid.Column="1"
			MinWidth="30"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			Margin="0,0,10,0"
			Visibility="Visible"
			Text="{Binding Value, Mode=TwoWay, StringFormat=N2}"
			BorderBrush="{x:Null}"
			TextChanged="TextBox_TextChanged"
			PreviewTextInput="TextBox_PreviewTextInput_Float"
			PreviewMouseDown="TextBox_PreviewMouseDown"
			PreviewKeyDown="TextBox_PreviewKeyDown"
			PreviewGotKeyboardFocus="TextBox_GotFocus"
			PreviewLostKeyboardFocus="TextBox_LostFocus" />
        <CheckBox
			Name="Checkbox"
			Grid.Column="2"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			Margin="0,0,10,0"
			Background="{DynamicResource SecondaryAccentBrush}"
			Foreground="{DynamicResource SecondaryAccentForegroundBrush}"
			IsChecked="{Binding IsActive, Mode=TwoWay}"
			IsEnabled="{Binding ChangesEnabled}" />
        <TextBox
			Name="MinText"
			FontSize="12"
			Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
			Grid.Column="3"
			MinWidth="50"
			VerticalAlignment="Center"
			HorizontalContentAlignment="Right"
			Margin="0,0,10,0"
			Visibility="Visible"
			Text="{Binding Min, Mode=TwoWay, StringFormat=N2}"
			BorderBrush="{x:Null}"
			TextChanged="TextBox_TextChanged"
			PreviewTextInput="TextBox_PreviewTextInput_Float"
			PreviewMouseDown="TextBox_PreviewMouseDown"
			PreviewKeyDown="TextBox_PreviewKeyDown"
			PreviewGotKeyboardFocus="TextBox_GotFocus"
			PreviewLostKeyboardFocus="TextBox_LostFocus" />
        <Slider
			Name="Slider"
			FontSize="8"
			Foreground="{DynamicResource PrimaryHueLightBrush}"
			Grid.Column="4"
			Width="125"
			VerticalAlignment="Center"
			HorizontalAlignment="Center"
			AutoToolTipPlacement="BottomRight"
			AutoToolTipPrecision="2"
			Visibility="Visible"
			Minimum="{Binding Min, Mode=TwoWay}"
			Maximum="{Binding Max, Mode=TwoWay}"
			Value="{Binding Value, Mode=TwoWay}"
			IsEnabled="{Binding ChangesEnabled}" />
        <TextBox
			Name="MaxText"
			FontSize="12"
			Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
			Grid.Column="5"
			MinWidth="50"
			HorizontalContentAlignment="Left"
			VerticalAlignment="Center"
			Margin="10,0,5,0"
			Visibility="Visible"
			Text="{Binding Max, Mode=TwoWay, StringFormat=N2}"
			BorderBrush="{x:Null}"
			TextChanged="TextBox_TextChanged"
			PreviewTextInput="TextBox_PreviewTextInput_Float"
			PreviewMouseDown="TextBox_PreviewMouseDown"
			PreviewKeyDown="TextBox_PreviewKeyDown"
			PreviewGotKeyboardFocus="TextBox_GotFocus"
			PreviewLostKeyboardFocus="TextBox_LostFocus" />
    </Grid>
</local:BaseControl>
