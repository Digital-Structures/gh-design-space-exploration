<UserControl x:Class="DesignTool.View.GrammarControls.SetupParamControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    FontWeight="Normal" FontSize="12" FontFamily="Tw Cen MT"
    mc:Ignorable="d">
    
    <StackPanel x:Name="LayoutRoot" Background="White" Margin="5, 5, 0, 5">
        <StackPanel Orientation="Horizontal">
        <TextBlock Name="ParamName" FontSize="12" FontWeight="Bold"/>
        <TextBlock Name="ParamDesc" TextWrapping="Wrap" Margin="5 0 0 0"/>
        </StackPanel>
        <Border Name="ParamControl" />
    </StackPanel>
</UserControl>
